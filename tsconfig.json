{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
